@model IEnumerable<MediaPlannerCore.Model.Models.AdSet>

@{
    ViewData["Title"] = "Index";
    ViewData["Message"] = "No Record Found";
}



<p>
    <input type="button" value="Create New" class="btn btn-warning" style="color:white" onclick="location.href='@Url.Action("Create", "AdSets",new { id= @ViewBag.CampaignId })'" />
</p>

<b>Campaign Name</b>:@ViewBag.CampaignName
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MediaChannel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Supplier)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.MediaChannel != null)
                        {
                            @Html.DisplayFor(modelItem => item.MediaChannel.MediaChannelName)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => "")
                        }
                    </td>
                    <td>
                        @if (item.Supplier != null)
                        {
                            @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => "")
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AdSetId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.AdSetId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.AdSetId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <br />
    <partial name="_CustomMessage" ,@ViewData["Message"] />
}